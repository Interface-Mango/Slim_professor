<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Slim_professor.EditNotice"
	x:Name="Window"
	Title="EditNotice"
	Width="640" Height="480" WindowStartupLocation="CenterScreen">
	<Grid x:Name="MainPanel" Margin="0">
		<Grid x:Name="MainGrid" Margin="40,46.398,40,70" Background="#B2D4EAAE">
			<Border x:Name="Title" BorderThickness="1" Height="46.314" VerticalAlignment="Top" Background="#FFB1D2EE" Margin="25,29.343,25,0" CornerRadius="20">
				<TextBox x:Name="EditTitleBox" TextWrapping="Wrap" Margin="24.806,9,22.784,10" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
			</Border>
			<Border x:Name="Content" BorderThickness="1" Background="#FFB1D2EE" Margin="25,99.814,25,25" CornerRadius="20">
				<TextBox x:Name="EditContentBox" TextWrapping="Wrap" Margin="10,9" FontSize="13.333"/>
			</Border>
		</Grid>
		<Button x:Name="RegBtn" Content="등록하기" HorizontalAlignment="Left" VerticalAlignment="Top" Width="101.593" Margin="507.957,387.99,0,0" Height="34.189" BorderBrush="{x:Null}" Background="#FFF1E3C5" FontSize="16" FontWeight="Bold" Click="RegBtnClick"/>
	</Grid>
</Window>