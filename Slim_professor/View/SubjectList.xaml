<Page x:Class="Slim_professor.SubjectList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Width="1192"
      Height="669"
      FlowDirection="LeftToRight"
      ShowsNavigationUI="False"
      WindowHeight="700"
      WindowTitle="Slim"
      WindowWidth="1200">


    <Grid>
        <Canvas Width="972"
                Height="40"
                Margin="220,40,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FFEA8B8B">
            <TextBlock Canvas.Left="80"
                       Canvas.Top="10"
                       Width="93"
                       Height="20"
                       VerticalAlignment="Center"
                       FontSize="14.667"
                       FontWeight="Bold"
                       Text="수업리스트"
                       TextWrapping="Wrap" />
        </Canvas>
        <Grid Width="972"
              Height="589"
              Margin="220,80,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Background="#FFFFE406">
            <Grid Margin="150,50" Background="#4CD69595">
                <ListBox Name="SubjectListBox"
                         ItemsSource="{Binding SubjectItemList}"
                         Style="{DynamicResource LBX_VERTICAL}" />

                <Button Name="EnterButton"
                        Grid.Row="0"
                        Width="100"
                        Height="50"
                        Margin="704,0,-132,459"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#f76a51"
                        Command="{Binding EnterSubjectCommand}"
                        Content="들어가기"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="#ffffff" />
            </Grid>
        </Grid>
        <Canvas x:Name="SubPanel" Grid.Row="1">
                <Canvas Canvas.Top="40"
                    Width="220"
                    Height="80"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFFFF8CA">
                    <Image Canvas.Left="14.272"
                       Canvas.Top="10.48"
                       Width="60"
                       Height="60"
                       Margin="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Source="Images/basicprofile.jpg" />
                    <TextBlock Canvas.Left="79.59"
                           Canvas.Top="11.365"
                           Width="130.41"
                           Height="25.439"
                           FontSize="20"
                           Foreground="#FF741616"
                           Text="{Binding UserGroup}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                    <TextBlock Canvas.Left="79.59"
                           Canvas.Top="41.804"
                           Width="130.41"
                           Height="25.439"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FF741616"
                           Text="{Binding UserName}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                </Canvas>
            <Grid Canvas.Top="120"
                  Width="220"
                  Height="549"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Background="#FFFFF8CA">
                <Button Width="220"
                        Height="70"
                        Margin="0,30,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Right"
                        Background="White"
                        BorderBrush="{x:Null}"
                        Content="수업리스트"
                        FontSize="22.667"
                        FontWeight="Bold"
                        Padding="0 5 10 5" FontFamily="나눔 고딕" />
            </Grid>
            <Button Content="위젯 모드" Canvas.Left="1102" Canvas.Top="640.37" Width="80"
            	HorizontalAlignment="Center"
            	VerticalAlignment="Center"
            	Background="#276a51"
            	Command="{Binding MinimizeCommand}"
            	FontSize="11"
            	FontWeight="Bold"
            	Foreground="#ffffff" />
        </Canvas>
        <Canvas Height="40"
        	VerticalAlignment="Top"
        	Background="#FF524500">
        	<TextBlock Canvas.Left="569.205"
        		Canvas.Top="2.555"
        		Width="54.473"
        		Height="37.445"
        		FontSize="24"
        		Foreground="White"
        		Text="Slim"
        		TextWrapping="Wrap" HorizontalAlignment="Center" />
        	<Canvas x:Name="CloseBtn" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="24" Background="#FFEC5C5C" Canvas.Left="1158" Canvas.Top="9">
        		<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="X" VerticalAlignment="Top" Width="24" Foreground="White" FontWeight="Bold" Height="16" TextAlignment="Center" Canvas.Top="4"/>
        	</Canvas>
        </Canvas>
    </Grid>
</Page>