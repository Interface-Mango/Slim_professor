<Page x:Class="Slim_professor.SubjectList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Width="1192"
      Height="669"
      FlowDirection="LeftToRight"
      ShowsNavigationUI="False"
      WindowHeight="700"
      WindowTitle="Slim"
      WindowWidth="1200">


    <Grid>
        <Canvas Width="972"
                Height="40"
                Margin="220,40,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FFEA8B8B">
            <TextBlock Canvas.Left="80"
                       Canvas.Top="10"
                       Width="93"
                       Height="20"
                       VerticalAlignment="Center"
                       FontSize="14.667"
                       FontWeight="Bold"
                       Text="수업리스트"
                       TextWrapping="Wrap" />
        </Canvas>
        <Grid Width="972"
              Height="589"
              Margin="220,80,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Background="#FFF4F5E0">
            <Grid Margin="150,50" Background="#4CD69595">
                <ListBox Name="SubjectListBox"
                         ItemsSource="{Binding SubjectItemList}"
                         Style="{DynamicResource LBX_VERTICAL}" />

                <Button Name="EnterButton"
                        Grid.Row="0"
                        Width="100"
                        Height="50"
                        Margin="704,0,-132,459"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="#f76a51"
                        Command="{Binding EnterSubjectCommand}"
                        Content="들어가기"
                        FontSize="11"
                        FontWeight="Bold"
                        Foreground="#ffffff" />
            </Grid>
        </Grid>
        <Canvas Height="40"
                Margin="0"
                VerticalAlignment="Top"
                Background="#FF71C563">
            <Image Canvas.Left="18.96"
                   Width="39.336"
                   Height="39.336"
                   Source="Images/smallmango.jpg" />
            <TextBlock Canvas.Left="60.64"
                       Canvas.Top="1.891"
                       Width="112.093"
                       Height="37.445"
                       FontSize="24"
                       Foreground="White"
                       Text="Slim"
                       TextWrapping="Wrap" />
            <Button Content="위젯 모드" Canvas.Left="1100" Canvas.Top="8" Width="80"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="#276a51"
                            Command="{Binding MinimizeCommand}"
                            FontSize="11"
                            FontWeight="Bold"
                            Foreground="#ffffff" />
        </Canvas>
        <Canvas x:Name="SubPanel" Grid.Row="1">
                <Canvas Canvas.Top="40"
                    Width="220"
                    Height="80"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFE0E4B9">
                    <Image Canvas.Left="14.272"
                       Canvas.Top="10.48"
                       Width="60"
                       Height="60"
                       Margin="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Source="Images/basicprofile.jpg" />
                    <TextBlock Canvas.Left="79.59"
                           Canvas.Top="11.365"
                           Width="130.41"
                           Height="25.439"
                           FontSize="20"
                           Foreground="#FF741616"
                           Text="{Binding UserGroup}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                    <TextBlock Canvas.Left="79.59"
                           Canvas.Top="41.804"
                           Width="130.41"
                           Height="25.439"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FF741616"
                           Text="{Binding UserName}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                </Canvas>
            <Grid Canvas.Top="120"
                  Width="220"
                  Height="549"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Background="#FFBBCB8F">
                <Button Width="220"
                        Height="60"
                        Margin="0,15,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Right"
                        Background="#FFD9EEEE"
                        BorderBrush="{x:Null}"
                        Content="수업리스트"
                        FontSize="20"
                        FontWeight="Bold"
                        Padding="0 5 10 5" />
            </Grid>
        </Canvas>
    </Grid>
</Page>