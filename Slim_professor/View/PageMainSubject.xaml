<Page x:Class="Slim_professor.View.PageMainSubject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="PageMainSubject"
      Width="1192"
      Height="669"
      d:DesignHeight="300"
      d:DesignWidth="300"
      WindowHeight="700"
      WindowTitle="Slim"
      WindowWidth="1200"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="TitleCanvas"
                Grid.ColumnSpan="2"
                Height="40"
                VerticalAlignment="Top"
                Background="#FF71C563">
            <Button Canvas.Right="0"
                    Width="50"
                    Height="30"
                    Margin="0 5 5 5"
                    Command="NavigationCommands.BrowseBack"
                    Content="홈으로" />
            <Image Canvas.Left="18.96"
                   Width="39.336"
                   Height="39.336"
                   Source="Images/smallmango.jpg" />
            <TextBlock Canvas.Left="61"
                       Canvas.Top="2"
                       Width="53"
                       Height="37"
                       FontSize="24"
                       Foreground="White"
                       Text="Slim"
                       TextWrapping="Wrap" />
            <TextBlock x:Name="SubName"
                       Canvas.Left="132"
                       Canvas.Top="6"
                       Width="250"
                       Height="30"
                       FontSize="20"
                       Foreground="White"
                       TextWrapping="Wrap" />
        </Canvas>
        <Canvas Grid.Row="1">
            <Canvas x:Name="ProfileCanvas"
                    Width="220"
                    Height="80"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFE0E4B9">
                <Image x:Name="ProfilePicture"
                       Canvas.Left="10"
                       Canvas.Top="10"
                       Width="60"
                       Height="60"
                       Margin="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Source="Images/basicprofile.jpg" />
                <TextBlock x:Name="ProfileGroup"
                           Canvas.Left="75"
                           Canvas.Top="10"
                           Width="131"
                           Height="26"
                           FontSize="20"
                           Foreground="#FF741616"
                           Text="{Binding UserGroup}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <TextBlock x:Name="ProfileName"
                           Canvas.Left="75"
                           Canvas.Top="40"
                           Width="131"
                           Height="26"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FF741616"
                           Text="{Binding UserName}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
            </Canvas>
            <StackPanel Width="220"
                        Height="549"
                        Margin="0,80,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#FFCBAD8F">
                <Button Width="220"
                        Height="60"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Right"
                        Background="#FFD9E1EE"
                        BorderBrush="{x:Null}"
                        Command="{Binding GoStudentState}"
                        Content="학생 현황"
                        FontSize="20"
                        FontWeight="Bold"
                        Padding="0,0,10,0" />
                <Button x:Name="HiddenTalkBtn"
                        Width="220"
                        Height="60"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Right"
                        Background="#FFD9E1EE"
                        BorderBrush="{x:Null}"
                        Command="{Binding GoHiddenTalk}"
                        Content="익명 단체 대화방"
                        FontSize="20"
                        FontWeight="Bold"
                        Padding="0,0,10,0" />
                <Button Width="220"
                        Height="60"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Right"
                        Background="#FFD9E1EE"
                        BorderBrush="{x:Null}"
                        Command="{Binding GoSubjectStatistic}"
                        Content="수업 통계"
                        FontSize="20"
                        FontWeight="Bold"
                        Padding="0,0,10,0" />
                <Button x:Name="QnABtn"
                        Width="220"
                        Height="60"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Right"
                        Background="#FFD9E1EE"
                        BorderBrush="{x:Null}"
                        Command="{Binding GoQna}"
                        Content="Q &amp; A 게시판"
                        FontSize="20"
                        FontWeight="Bold"
                        Padding="0,0,10,0" />
                <Button x:Name="NoticeBtn"
                        Width="220"
                        Height="60"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Right"
                        Background="#FFD9E1EE"
                        BorderBrush="{x:Null}"
                        Command="{Binding GoNotice}"
                        Content="공지사항"
                        FontSize="20"
                        FontWeight="Bold"
                        Padding="0,0,10,0" />
            </StackPanel>
        </Canvas>
        <Frame x:Name="FramePanel"
               Grid.Row="1"
               Grid.Column="1"
               Source="{Binding FrameSource,
                                Mode=OneWay}" />

    </Grid>
</Page>
