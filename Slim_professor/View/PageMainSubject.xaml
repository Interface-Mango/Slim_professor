                           TextAlignment="Center"
                           TextWrapping="Wrap" />
            </Canvas>
            <Canvas x:Name="canvas1"
                    Width="220"
                    Height="70"
                    Margin="0,100,0,379"
                    HorizontalAlignment="Left"
                    Background="#FF325166">
                <Canvas.InputBindings>
                    <MouseBinding Command="{Binding GoHiddenTalk}" MouseAction="LeftClick" />
                </Canvas.InputBindings>
                <TextBlock x:Name="textBlock1"
                           Canvas.Top="20"
                           Width="220"
                           Height="30"
                           FontFamily="NanumSquareOTF BOLD"
                           FontSize="20"
                           Foreground="#FFFEFEFE"
                           Text="익명 단체 대화방"
