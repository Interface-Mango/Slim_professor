            <Canvas x:Name="canvas3"
                    Width="220"
                    Height="70"
                    Margin="0,170,0,309"
                    HorizontalAlignment="Left"
                    Background="#FF325166">
                <Canvas.InputBindings>
                    <MouseBinding Command="{Binding GoNotice}" MouseAction="LeftClick" />
                </Canvas.InputBindings>
                <TextBlock x:Name="textBlock3"
