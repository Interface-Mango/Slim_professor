                           TextWrapping="Wrap" />
            </Canvas>
            <Canvas x:Name="WidgetBtn"
                    Width="220"
                    Height="70"
                    HorizontalAlignment="Left"
                    Background="#FF325166"
                    MouseLeftButtonDown="WidgetBtn_MouseLeftButtonDown" Canvas.Top="243">
                <TextBlock x:Name="textBlock4"
                           Canvas.Top="20"
                           Width="220"
                           Height="30"
                           FontFamily="NanumSquareOTF BOLD"
                           FontSize="20"
                           Foreground="#FFFEFEFE"
                           Text="위젯 모드"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
                <!--  글씨체 후보: Tw Cen MT Condensed Extra Bold  -->
            </Canvas>
            <TextBox x:Name="processTextBox"
                     Width="200"
                     Height="23"
                     Margin="10,520,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Background="White"
                     BorderBrush="{x:Null}"
                     FontFamily="NanumSquareOTF BOLD"
                     Foreground="#FFDE4949"
                     IsReadOnly="True"
                     TextAlignment="Center"
                     TextWrapping="Wrap" />
            <TextBlock Width="200"
                       Margin="10,500,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="NanumSquareOTF BOLD"
                       Foreground="#FFFEFEFE"
                       Text="실행 중인 프로세스 이름"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
            <Canvas x:Name="HomeBtn"
                    Canvas.Top="313"
                    Width="220"
                    Height="70"
                    HorizontalAlignment="Left"
                    Background="#FF355062">
                <Canvas.InputBindings>
                    <MouseBinding Command="{Binding GoHome}" MouseAction="LeftClick" />
                </Canvas.InputBindings>
                <TextBlock x:Name="textBlock5"
                           Canvas.Top="20"
                           Width="220"
                           Height="33"
                           FontFamily="NanumSquareOTF BOLD"
                           FontSize="20"
                           Foreground="#FFFEFEFE"
                           Text="홈으로"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
            </Canvas>
        </Canvas>

    </Grid>
</Page>
