    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="83" />
            <RowDefinition Height="546" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Canvas Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Height="40"
                VerticalAlignment="Top"
                Background="Black">
            <TextBlock x:Name="SubName"
                       Canvas.Top="7"
                       Width="1158"
                       Height="30"
                       FontFamily="NanumSquareOTF BOLD"
                       FontSize="20"
                       Foreground="White"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
            <Button x:Name="CloseBtn"
                    Canvas.Left="1158"
                    Canvas.Top="9"
                    Width="24"
                    Height="24"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFC94B5E"
                    Command="{Binding ClosingWindowCommand}">
                <TextBlock Height="16"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="X"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
            </Button>
        </Canvas>
        <Canvas Grid.Row="1" Grid.Column="0">
            <Canvas x:Name="ProfileCanvas"
                    Width="220"
                    Height="83"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FF355062">
                <TextBlock x:Name="ProfileGroup"
                           Canvas.Left="32"
                           Canvas.Top="11"
                           Width="131"
                           Height="26"
                           FontSize="20"
                           Foreground="#FFFEFEFE"
                           Text="{Binding UserGroup}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" FontFamily="NanumSquareOTF Bold" />
                <TextBlock x:Name="ProfileName"
                           Canvas.Left="32"
                           Canvas.Top="41"
                           Width="131"
                           Height="26"
                           FontSize="20"
                           Foreground="#FFFEFEFE"
                           Text="{Binding UserName}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" FontFamily="NanumSquareOTF Bold" />
            </Canvas>
        </Canvas>
        <Frame x:Name="FramePanel"
               Grid.Row="1"
               Grid.RowSpan="2"
               Grid.Column="1"
               Source="{Binding FrameSource,
                                Mode=OneWay}" />
        <Canvas Grid.Row="2"
                Width="220"
                Height="549"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FF355062">
