<Window x:Name="Login" x:Class="Slim_professor.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Slim" Height="700" Width="1200" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Storyboard x:Key="LoginOpacity"/>
        <Storyboard x:Key="LoginLogo"/>
        <Storyboard x:Key="OnAnimation">
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="LogoCanvas">
                <EasingThicknessKeyFrame KeyTime="0:0:1.6" Value="454.144,220,458.144,0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:2.2" Value="454.144,220,458.144,0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:2.3" Value="454,110,458,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="textBlock1">
                <EasingThicknessKeyFrame KeyTime="0:0:2.1" Value="-110.397,59.01,1228.602,0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:2.4" Value="429,397,688,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="textBlock2">
                <EasingThicknessKeyFrame KeyTime="0:0:2.4" Value="317.602,772.01,800.602,-133"/>
                <EasingThicknessKeyFrame KeyTime="0:0:2.7" Value="429,448,688,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="border">
                <EasingThicknessKeyFrame KeyTime="0:0:2.4" Value="968,760.441,0,-137.127"/>
                <EasingThicknessKeyFrame KeyTime="0:0:2.7" Value="630,503,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="PWBox">
                <EasingThicknessKeyFrame KeyTime="0:0:2.6" Value="1225,353.625,-225.038,0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:2.9" Value="517,443,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
            <ThicknessAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="IDTextBox">
                <EasingThicknessKeyFrame KeyTime="0:0:2.2" Value="869,-93.01,0,0"/>
                <EasingThicknessKeyFrame KeyTime="0:0:2.5" Value="517,393,0,0"/>
            </ThicknessAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource OnAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid x:Name="logPanel" Background="#FFDFE6B3">
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Margin="-110.397,59,1228.602,0" Height="30" Width="73.795" FontWeight="Bold" FontSize="18.667" TextAlignment="Center"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="PW" VerticalAlignment="Top" Margin="317.602,772,800.602,-133" Height="30" Width="73.796" FontWeight="Bold" FontSize="18.667" TextAlignment="Center"/>
        <TextBox Text="{Binding IDTextBox}" x:Name="IDTextBox" HorizontalAlignment="Left" Height="35" TextWrapping="Wrap" VerticalAlignment="Top" Width="192.038" Margin="869,-93,0,0" BorderBrush="{x:Null}" FontSize="18.667"/>
        <PasswordBox x:Name="PWBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="192.038" Margin="1225,353.626,-225.038,0" Height="35" BorderBrush="{x:Null}" FontSize="18.667">
            <PasswordBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding LoginCommand}"/>
            </PasswordBox.InputBindings>
        </PasswordBox>
        <Border x:Name="border" BorderThickness="1" HorizontalAlignment="Left" Height="45.687" VerticalAlignment="Top" Width="126.605" Margin="968,760.44,0,-137.127" CornerRadius="20" Background="#FFE8D0A7">
            <Button Command="{Binding LoginCommand}" x:Name="loginBtn" Content="Login" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="/Slim_professor;component/Fonts/#Malgun Gothic" FontSize="21.333" FontWeight="Bold"/>
        </Border>
        <Canvas x:Name="LogoCanvas" Margin="454.144,220,458.144,0" RenderTransformOrigin="0.5,0.5" Height="278.75" VerticalAlignment="Top" Width="279.711">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Canvas.RenderTransform>
            <Image x:Name="image" Height="212.54" Width="275.856" Source="Images/mangoLogo.jpg" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Slim" Canvas.Top="217.54" Width="275.856" Height="60.071" TextAlignment="Center" FontWeight="Bold" FontSize="42.667" Foreground="#FFE8A618" RenderTransformOrigin="0.5,0.5">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>
    </Grid>
</Window>
