    </Page.Resources>
    <Grid x:Name="MainPanel">
        <Grid Width="972"
              Height="589"
              Margin="0,40,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Background="#FFFEFEFE">
            <TextBox x:Name="msgTextBox"
                     Margin="30,28,776,96"
                     Background="#FF355065"
                     BorderBrush="{x:Null}"
                     FontFamily="NanumSquareOTF"
                     Foreground="#FFFBF9F9"
                     TextWrapping="Wrap" />
            <TextBox x:Name="msgTextBox1"
                     Width="726"
                     Height="465"
                     Margin="226,28,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Background="#FF355065"
                     BorderBrush="{x:Null}"
                     FontFamily="NanumSquareOTF"
                     Foreground="White"
                     TextWrapping="Wrap" />
            <TextBox x:Name="msgTextBox2"
                     Width="630"
                     Height="60"
                     Margin="322,508,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Background="#FFCFCFCF"
                     BorderBrush="{x:Null}"
                     FontFamily="NanumSquareOTF"
                     IsEnabled="False"
                     RenderTransformOrigin="0.5,0.5"
                     TextWrapping="Wrap">
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </TextBox.RenderTransform>
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding msgSend}" />
                </TextBox.InputBindings>
            </TextBox>
            <Button x:Name="ServerConnectBtn"
                    Width="163"
                    Height="60"
                    Margin="30,508,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFCFCFCF"
                    BorderBrush="{x:Null}"
                    Click="ServerConnectBtn_Click"
                    Command="{Binding ServerConnect}"
                    FontFamily="NanumSquareOTF BOLD"
                    FontSize="16"
                    Foreground="Black"
                    Visibility="Visible" />
            <TextBlock x:Name="IDText"
                       Width="78"
                       Height="28"
                       Margin="228,526,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontFamily="NanumSquareOTF BOLD"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#FF509146"
                       Text="ID"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </Grid>
        <Canvas Width="972"
                Height="40"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FF355065">
            <TextBlock Canvas.Left="429"
                       Canvas.Top="10"
                       Width="114"
                       Height="20"
                       VerticalAlignment="Center"
                       FontFamily="NanumSquareOTF BOLD"
                       FontSize="14.667"
                       Foreground="White"
                       Text="익명 단체 대화방"
                       TextWrapping="Wrap" />
        </Canvas>
